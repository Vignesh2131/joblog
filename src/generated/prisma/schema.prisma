generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  username    String
  imageUrl    String
  clerkId     String       @unique
  Jobs        Job[]
  Experiences Experience[]
}

model Job {
  id            String  @id @default(uuid())
  jobTitle      String
  companyName   String
  appliedSource String
  status        String
  Notes         String
  Salary        String?
  userId        String  @unique
  user          User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Experience {
  id              String   @id @default(uuid())
  jobTitle        String
  companyName     String
  interviewStage  String
  outcome         String
  dateOfInterview DateTime @default(now())
  summary         String
  takeaways       String
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
